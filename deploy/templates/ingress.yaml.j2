apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ app_name }}
  annotations:
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
spec:
  tls:
  - hosts:
    - {{ host }}
    secretName: tls-secret
  rules:
  - host: {{ host }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: {{ app_name }}
            port:
              number: 80
